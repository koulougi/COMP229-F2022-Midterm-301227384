<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6"></div>
        <h1><%= title %></h1>
        <form class="form" method="POST">
            <div class="form-group">
                <label for="idTextField">ID of Product</label>
                <input type="text" class="form-control"
                       id="idTextField"
                       placeholder="Enter the ID of Product"
                       name="Productid" required>
            </div>
            <div class="form-group">
                <label for="nameTextField">Name of Product</label>
                <input type="text" class="form-control"
                       id="nameTextField"
                       placeholder="Enter the Name of Product"
                       name="Productname" required>
            </div>
            <div class="form-group">
                <label for="descTextField">Description of Product</label>
                <input type="text" class="form-control"
                       id="descTextField"
                       placeholder="Enter the Description of Product"
                       name="Description" required>
            </div>
            <div class="form-group">
                <label for="priceTextField">Price of Product</label>
                <input type="number" class="form-control"
                       id="priceTextField"
                       placeholder="Enter the Price of Product"
                       name="Price" required>
            </div>
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit</button>
            <a href="/products" class="btn btn-danger">
                <i class="fas fa-under"></i> Cancel</a>
        </form>
    </div>
</div>

<% include ../partials/footer.ejs %>
